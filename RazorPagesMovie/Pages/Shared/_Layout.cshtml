          <a asp-page="/Index" class="navbar-brand">RHOBALAS
          </a>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li class="nav-item @(@ViewData["Title"] == "Home" ? "active" : "")">
                <a class="nav-link" asp-page="/Index">MY TV</a>
              </li>
              <li class="nav-item @(@ViewData["Title"] == "News" ? "active" : "")">
                <a class="nav-link" asp-page="/News">NEWS</a>
              </li>
              <li class="nav-item @(@ViewData["Title"] == "Planning" ? "active" : "")">
